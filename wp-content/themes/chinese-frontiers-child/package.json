{
  "name": "chinese-frontiers-wordpress-theme",
  "version": "1.0.0",
  "description": "Custom Wordpress Theme",
  "main": "postcss.config.js",
  "scripts": {
    "serve": "webpack-dev-server",
    "start": "webpack --config webpack.dev.js",
    "build": "rimraf assets && webpack --progress --config webpack.prod.js",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:scripts": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx \"src\"",
    "fix:html": "prettier \"src/**/*.html\" --write",
    "fix:styles": "stylelint \"src/**/*.scss\" --fix",
    "fix:scripts": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx \"src\" --fix",
    "webp": "node webpack.config.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://PiotrekNiemirski@bitbucket.org/theypl/zelmer_website_wordpress.git"
  },
  "author": "they.pl",
  "license": "ISC",
  "bugs": {
    "url": "https://bitbucket.org/theypl/zelmer_website_wordpress/issues"
  },
  "homepage": "https://bitbucket.org/theypl/zelmer_website_wordpress#readme",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-runtime": "^7.24.7",
